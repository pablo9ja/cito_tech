// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/devcontainers/images/tree/main/src/javascript-node
{
  "name": "Data Science Environment with GitHub Codespaces",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install -r requirements.txt",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "jupyter notebook --ip=0.0.0.0 --port=8888 --no-browser --allow-root"
  },

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-ossdata.vscode-postgresql",
        "tht13.python",
        "ms-vscode-remote.remote-containers",
        "GitHub.copilot",
        "ms-vscode.azure-account",
        "ms-azuretools.vscode-azurestaticwebapps",
        "ms-azuretools.vscode-cosmosdb"
      ],
      "settings": {
        "python.pythonPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "jupyter.jupyterServer.remote.launchUri": "http://localhost:8888",
        "jupyter.jupyterServer.remote.allowUnauthorized": true
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.9"
    },
    "ghcr.io/devcontainers/features/mongodb:1": {}
  },

  "containerEnv": {
    "MONGODB_URI": "your_mongodb_connection_string"
  },

  "portsAttributes": {
    "8888": {
      "label": "Jupyter Notebook",
      "onAutoForward": "openPreview"
    }
  },

  "forwardPorts": [8888],

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ]
}
